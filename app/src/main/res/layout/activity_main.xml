<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.design.widget.FloatingActionButton
            android:layout_width="64dp"
            android:layout_height="66dp"
            android:clickable="true" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/floatingActionButton4"
            app:layout_constraintStart_toEndOf="@+id/floatingActionButton3" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/floatingActionButton5"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <ImageView
            android:layout_width="424dp"
            app:srcCompat="@drawable/header_image"
            android:id="@+id/imageView2"
            android:layout_height="230dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="w,16:9" android:layout_marginStart="8dp"
            android:contentDescription="@null"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.517"
    />
    <ImageView
            android:layout_width="111dp"
            app:srcCompat="@drawable/cover"
            android:id="@+id/imageView3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_height="170dp"
            app:layout_constraintDimensionRatio="w,2:3"
            android:contentDescription="@null"
            app:layout_constraintVertical_bias="0.531" app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Beauty And The Beast adslfh "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/imageButton"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintDimensionRatio="w,1:1" android:layout_marginTop="16dp"
            android:contentDescription="@null"
            android:backgroundTint="@color/colorAccent" app:layout_constraintEnd_toStartOf="@+id/guideline2"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_begin="16dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical" app:layout_constraintGuide_end="16dp"/>
    <TextView
            android:text="PG13 | Comedy | 113min"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginTop="8dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"/>
    <Button
            android:text="Buy A Ticket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:backgroundTint="@color/colorAccent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="16dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:id="@+id/button2" app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:text="VIEW TRAILER" android:backgroundTint="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="16dp"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:clickable="true" app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/floatingActionButton3" app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/floatingActionButton4"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginTop="16dp" app:elevation="0dp"
            app:backgroundTintMode="src_in" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="64dp"
            android:layout_height="71dp"
            android:clickable="true" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/floatingActionButton5"
            app:layout_constraintStart_toEndOf="@+id/floatingActionButton4" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/floatingActionButton6"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="79dp"
            android:layout_height="67dp"
            android:clickable="true" app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/floatingActionButton6" app:layout_constraintStart_toEndOf="@+id/floatingActionButton5"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
</android.support.constraint.ConstraintLayout>